<?xml version="1.0" encoding="utf-8"?>
<resources>
    <item name="empty_image" type="id"/>
    <item name="empty_text" type="id"/>
    <item name="empty_btn" type="id"/>

    <item name="error_image" type="id"/>
    <item name="error_text" type="id"/>
    <item name="retry_button" type="id"/>
    <item name="loading_image" type="id"/>


    <style name="StateLayout">
    </style>

    <style name="StateLayout.Style">
        <item name="slEmptyResId">@layout/state_layout_empty</item>
        <item name="slLoadingResId">@layout/state_layout_loading</item>
        <item name="slErrorResId">@layout/state_layout_error</item>

        <item name="slTextColor">@color/color_cedbe9</item>
        <item name="slTextSize">16sp</item>

        <!--<item name="slButtonTextColor">#999999</item>
        <item name="slButtonTextSize">16sp</item>-->
        <!--<item name="slButtonBackground">@drawable/loading_layout_button</item>-->

        <item name="slEmptyImage">@drawable/state_empty_img</item>
        <item name="slEmptyText">暂无空房换个日期试试吧</item>
        <item name="slErrorImage">@drawable/state_error_img</item>
        <item name="slErrorText">加载失败点击页面重试</item>
        <item name="slRetryText">加载失败，点击重试~~</item>
    </style>


    <declare-styleable name="StateLayout">
        <!-- 空布局资源id -->
        <attr name="slEmptyResId" format="reference"/>
        <!-- 加载中布局资源id -->
        <attr name="slLoadingResId" format="reference"/>
        <!-- 错误布局资源id -->
        <attr name="slErrorResId" format="reference"/>

        <!-- 空布局图片 -->
        <attr name="slEmptyImage" format="reference"/>
        <!-- 空布局文本 -->
        <attr name="slEmptyText" format="string"/>

        <!-- 错误布局图片 -->
        <attr name="slErrorImage" format="reference"/>
        <!-- 错误布局文本 -->
        <attr name="slErrorText" format="string"/>
        <!-- 错误布局重试按钮文本 -->
        <attr name="slRetryText" format="string"/>

        <!-- 文本颜色 -->
        <attr name="slTextColor" format="color"/>
        <!-- 文本尺寸 -->
        <attr name="slTextSize" format="dimension"/>

        <!-- 按钮文本颜色 -->
        <attr name="slButtonTextColor" format="color"/>
        <!-- 按钮文本尺寸 -->
        <attr name="slButtonTextSize" format="dimension"/>
        <!-- 按钮背景 -->
        <attr name="slButtonBackground" format="reference"/>
    </declare-styleable>
</resources>